{
    "version": "2.0.0",
    "tasks": [
        // CMake - Configure
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake -B ${workspaceFolder}/build",
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": "none"
        },

        // ------------------------

        // Debug - Build
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Debug",
            "dependsOn": [ "configure" ],
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        /// Debug - Test
        {
            "label": "test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "ctest -C Debug -T test --output-on-failure",
            "dependsOn": [ "build" ],
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": "none"
        },

        /// Debug - Install
        {
            "label": "install",
            "type": "shell",
            "command": "cmake --install ${workspaceFolder}/build --config Debug",
            "dependsOn": [ "build" ],
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": "none"
        },

        // ------------------------

        // Release - Build
        {
            "label": "release-build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Release",
            "dependsOn": [ "configure" ],
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": "build"
        },

        /// Release - Test
        {
            "label": "release-test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "ctest -C Release -T test --output-on-failure",
            "dependsOn": [ "release-build" ],
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": "none"
        },

        // Release - Install
        {
            "label": "release-install",
            "type": "shell",
            "command": "cmake --install ${workspaceFolder}/build --config Release",
            "dependsOn": [ "release-build" ],
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "group": "none"
        }
    ]
}